<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mygame.sudoku.SudokuController">
    <center>
        <GridPane fx:id="boardGrid" alignment="CENTER" hgap="5" vgap="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/> <!-- Correct padding format -->
            </padding>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Ellenőrzés" onAction="#handleCheck"/>
            <Button text="Visszaállítás" onAction="#handleReset"/>
            <Button text="Mentés" onAction="#onSaveClicked"/>
            <Button text="Betöltés" onAction="#onLoadClicked"/>
        </HBox>
    </bottom>
</BorderPane>
